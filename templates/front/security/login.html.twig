{% extends '/front/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="flex h-screen">
        <div class="lg:w-1/2 bg-primary flex flex-col justify-center h-full px-14">
            <img class="mb-4" width="200" src="/img/logo_fond_blanc.png">
            <p class="font-bungee text-white text-4xl pb-2">Bienvenue sur debug.me</p>
